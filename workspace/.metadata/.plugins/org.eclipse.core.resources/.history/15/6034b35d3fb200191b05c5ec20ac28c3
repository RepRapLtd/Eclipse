 *      Taken from https://numericalcomputation.blogspot.com/2013/02/c-code-poisson-equation-by-finite.html
 *      By M. G. Mahesha
 */
#include <stdio.h>
#include <math.h>
#define n 10  //dimension rows
#define m 10  //dimension columns
#define gx(x,y) -4
int main()
{
	int i,j,k;
	float a[100][100],b[100][100],g[100][100],h,xl,xh,yl,x;
	FILE *fp;
	fp=fopen("poisson.dat","w");
	xl = 0.0;
	xh = 10.0;
	yl = 0.0;
	h=(xh-xl)/(n-1);
	for(i=1;i<=n;i++)
	{
		x=xl;
		for(j=1;j<=m;j++)
		{
			g[i][j]=gx(x,yl);
			x+=h;
		}
		yl+=h;
	}

	for(i=1;i<=n;i++)
	{
		a[i][1] = a[i][m] = 0.0;
	}
	for(j=1;j<=m;j++)
	{
		a[1][j] = -1.0;
		a[n][j] = 1.0;
	}
	for(i=2;i<n;i++)
		for(j=2;j<m;j++)
		{
			a[i][j] = 0.0;   //initialization ends
			b[i][j] = 0.0;
		}
	double r = 0.2;
	double rss = 1.0;

	k = 0;
	while(k < 200 && rss > 0.0000001)
	{
		double sum = 0.0;
		for(i=2;i<n;i++)
		{
			for(j=2;j<m;j++)
			{
				a[i][j] = (a[i-1][j]+a[i+1][j]+a[i][j-1]+a[i][j+1]-(h*h*g[i][j]))/4; // + a[i][j]*r;
				sum = sum + (a[i][j] - b[i][j])*(a[i][j] - b[i][j]);
				b[i][j] = a[i][j];
			}
		}
		rss = sqrt(sum/( (float)n*(float)n) );
		printf("Rss: %f\n", rss);
		k++;
	}



	for(i=1;i<=n;i++)
	{
		for(j=1;j<=m;j++)
			fprintf(fp,"%f\n",a[i][j]);
		fprintf(fp,"\n");
	}
}





