/*
 * pde.cpp
 *
 * Solves Laplace's equation
 *
 *  Created on: 26 Jul 2019
 *      Author: Adrian Bowyer
 *
 */
#include <stdio.h>
#include <math.h>
#define n 50  //dimension rows
#define m 50  //dimension columns

int main()
{
	int i,j,k;
	float a[n+2][m+2],b[n+2][m+2];

	// Boundary conditions

	for(i=1;i<=n;i++)
	{
		a[i][1] = a[i][m] = 0.0;
	}
	for(j=1;j<=m;j++)
	{
		a[1][j] = a[n][j] = 0.0;
	}

	// One source and one sink at the edges

	a[1][m/2] = 10.0;
	a[n][m/2] = -10.0;

	// Initialise to 0

	for(i=2;i<n;i++)
		for(j=2;j<m;j++)
		{
			a[i][j] = 0.0;
			b[i][j] = 0.0;
		}

	// Gauss-Seidel iteration

	double r = 0.0;
	double rms = 1.0;
	k = 0;
	while(k < 1000 && rms > 0.000001)
	{
		rms = 0.0;
		for(i=2;i<n;i++)
		{
			for(j=2;j<m;j++)
			{
				a[i][j] = (a[i-1][j]+a[i+1][j]+a[i][j-1]+a[i][j+1])/4;
				r = (a[i][j] - b[i][j]);
				rms = rms + r*r;
				b[i][j] = a[i][j];
			}
		}
		rms = sqrt(rms/( (float)n*(float)n) );
		printf("Iteration: %i, rms: %f\n", k, rms);
		k++;
	}

	// Output for GNUplot

	FILE *fp;
	fp=fopen("laplace.dat","w");
	for(i=1;i<=n;i++)
	{
		for(j=1;j<=m;j++)
			fprintf(fp,"%f\n",a[i][j]);
		fprintf(fp,"\n");
	}
}





